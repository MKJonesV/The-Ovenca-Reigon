  public Pokemon(){
    dexNum = 0;
    pkm = "";
    entry = "";
  }
    
  public Pokemon(String var){
    if (var.charAt(0) == '#'){
      dexNum = Integer.parseInt(var.substring(1));
      pkm = pokedex[dexNum].substring(0, pokedex[dexNum].indexOf("."));
      t = new Types(pkmTypes[dexNum]);
      for(int j = 0; j < 6; j++){
        bst += pkmStats[dexNum][j];
      }
    } else {
      pkm = var;
      for(int i = 0; i < pokedex.length; i++){
        if(pokedex[i].substring(0, pokedex[i].indexOf(".")).equalsIgnoreCase(pkm)){
        dexNum = i;
        }
      }
      for(int j = 0; j < 6; j++){
        bst += pkmStats[dexNum][j];
      }
    }
    t = new Types(pkmTypes[dexNum]);
    m = new Moves(bst, pkmStats[dexNum][1], pkmStats[dexNum][3], t);
  }
  
  public String dexEntry(){
    if (dexNum > 0 && pkm != ""){
      return "Entry "+dexNum+": "+pkm+"\nType: "+pkmTypes[dexNum];
    } else {
      return "No Entry Found";
    }
  }

  public String stats(){
    String s = "(BST: "+bst+", ";
    int stat = pkmStats[dexNum][0];
    s += "HP: "+stat+", ";
    stat = pkmStats[dexNum][1];
    s += "ATK: "+stat+", ";
    stat = pkmStats[dexNum][2];
    s += "DEF: "+stat+", ";
    stat = pkmStats[dexNum][3];
    s += "SP ATK: "+stat+", ";
    stat = pkmStats[dexNum][4];
    s += "SP DEF: "+stat+", ";
    stat = pkmStats[dexNum][5];
    s += "SPD: "+stat+")";
    return s;
  }
  
  public String toString(){
    return pkm;
  }
  
  public String getMoves(){
    return m.toString(); 
  }
  
  public void setMoves(){
    m.addMoves();
  }
  
  public String typeSearch(String type){
    String t;
    for(int i = 1; i < pkmTypes.length-1; i++){
       t = pkmTypes[i];
       pkm = pokedex[i];
       if(t.equalsIgnoreCase(type)){
          entry += pkm.substring(0, pkm.indexOf(".")) + ", ";
       } else if(t.indexOf("/") != -1){
           if(t.substring(0, t.indexOf("/")).equalsIgnoreCase(type)){
             entry += pkm.substring(0, pkm.indexOf(".")) + ", ";
           } else if(t.substring(t.indexOf("/")+1).equalsIgnoreCase(type)){
             entry += pkm.substring(0, pkm.indexOf(".")) + ", ";
           } 
       }
    }
    return "All "+ type + " type pokemon: " + entry + "\n";
  }
  
  public String statSearch(String s, int x){
    int stat = 0;
    int val = 0;
    if(s.equalsIgnoreCase("HP")){
      stat = 0;
    }else if(s.equalsIgnoreCase("ATK")){
      stat = 1;
    }else if(s.equalsIgnoreCase("DEF")){
      stat = 2;
    }else if(s.equalsIgnoreCase("SP ATK")){
      stat = 3;
    }else if(s.equalsIgnoreCase("SP DEF")){
      stat = 4;
    }else if(s.equalsIgnoreCase("SPD")){
      stat = 5;
    }
    for(int i = 1; i < pokedex.length-1; i++){
      val = pkmStats[i][stat];
      pkm = pokedex[i];
      if(val >= x){
        entry += pkm.substring(0, pkm.indexOf(".")) + ", ";
      } 
    }
    return "All pokemon with more than "+ x +" "+ s +": "+ entry +"\n";
 }
}


